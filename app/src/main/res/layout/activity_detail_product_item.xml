<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:padding="12dp"
    tools:context=".ProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card: Product Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <!-- Title & Subtitle -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="NIKE Sneakers"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Vision Alta Men's Shoes Size (All Colours)"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Size: 7UK"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                tools:rating="4.5"
                android:isIndicator="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56,890"
                android:textSize="12sp"
                android:textColor="#777777" />
        </LinearLayout>

        <!-- Price & Discount -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="â‚¹1,500"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txtDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0% OFF"
                android:textColor="#E91E63"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Product Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Product Details"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Perhaps the most iconic sneaker of all-time..."
            android:textSize="13sp"
            android:textColor="#555555"
            android:maxLines="4"
            android:ellipsize="end"
            android:layout_marginBottom="16dp" />

        <!-- Tags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:text="Nearest Store"
                android:textSize="10sp"
                android:drawableLeft="@drawable/location"
                android:backgroundTint="#ECECEC"
                android:textColor="#000000"
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:text="VIP"
                android:textSize="10sp"
                android:backgroundTint="#ECECEC"
                android:textColor="#000000"
                android:drawableLeft="@drawable/lock"
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/policy"
                android:layout_margin="1dp"
                android:backgroundTint="#ECECEC"
                android:text="Return Policy"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnCart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Go to cart"
                android:drawableLeft="@drawable/add_product"
                android:backgroundTint="#00BCD4"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:backgroundTint="@android:color/holo_green_light"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
